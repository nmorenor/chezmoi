    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Host",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}/src",
            "program": "${workspaceFolder}/src/main.go",
            "console": "integratedTerminal"
        },
        {
            "name": "Launch Participant",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceFolder}/src",
            "program": "${workspaceFolder}/src/main.go",
            "console": "integratedTerminal",
            "args": [
                "-join"
            ]
        }
    ]
}